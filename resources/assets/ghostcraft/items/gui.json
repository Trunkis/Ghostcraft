{
    "model": {
        "type": "minecraft:select",
        "property": "minecraft:custom_model_data",
        "index": 0,
        "fallback": {
            "type": "minecraft:model",
            "model": "minecraft:item/barrier"
        },
        "cases": [
            {
                "when": "ghostcraft:armor_full",
                "model": {
                    "type": "minecraft:model",
                    "model": "ghostcraft:gui/armor_full"
                }
            },
            {
                "when": "ghostcraft:armor_half",
                "model": {
                    "type": "minecraft:model",
                    "model": "ghostcraft:gui/armor_half"
                }
            },
            {
                "when": "ghostcraft:armor_empty",
                "model": {
                    "type": "minecraft:model",
                    "model": "ghostcraft:gui/armor_empty"
                }
            }
        ]
    }
}